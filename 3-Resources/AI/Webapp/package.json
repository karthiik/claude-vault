{
  "name": "vision-dashboard",
  "version": "1.0.0",
  "description": "Personal Vision Dashboard for Obsidian vault",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "npm run build && node server.js",
    "build": "esbuild src/editor.js --bundle --outfile=public/editor.bundle.js --format=iife --global-name=MilkdownEditor",
    "watch": "esbuild src/editor.js --bundle --outfile=public/editor.bundle.js --format=iife --global-name=MilkdownEditor --watch"
  },
  "dependencies": {
    "express": "^4.18.2",
    "chokidar": "^3.5.3"
  },
  "devDependencies": {
    "@milkdown/core": "^7.5.0",
    "@milkdown/ctx": "^7.5.0",
    "@milkdown/preset-commonmark": "^7.5.0",
    "@milkdown/preset-gfm": "^7.5.0",
    "@milkdown/plugin-listener": "^7.5.0",
    "@milkdown/theme-nord": "^7.5.0",
    "esbuild": "^0.20.0"
  },
  "author": "Karthik Ramadoss",
  "license": "MIT"
}
